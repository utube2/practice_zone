pipeline {
    agent any
    environment {
     tag = "utube/testing"
     Image = ''
     
    }
    stages {
        stage('Hello') {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/utube2/practice_zone.git'
                }
            }
        }
        
         stage('Hellbuild image') {
            steps {
                script {
                   Image = docker.build tag + ":$BUILD_NUMBER"
                }
            }
        }
        
        stage('Push image') {
            steps {
                script {
                  withDockerRegistry(credentialsId: 'dockerhub', url: '') {
                   Image.push()
                   }
                }
            }
        }
       
        stage('Remove Unused docker image') {
            steps{
              sh "docker rmi $tag:$BUILD_NUMBER"
            }
        }


    }
    
}


